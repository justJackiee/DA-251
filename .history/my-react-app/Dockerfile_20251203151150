# Multi-stage Dockerfile for my-react-app
# 1) Build the React app with Node
FROM node:18-bullseye-slim AS build
WORKDIR /app

# Install dependencies (use package-lock.json when present)
COPY package*.json ./
# Prefer `npm ci` for reproducible installs, but fall back to `npm install`
# and enable more verbose output when build logs are requested.
RUN npm ci --silent || npm install --silent --no-audit --progress=false

# Copy source and build
COPY . .
RUN npm run build

# 2) Serve the built app with nginx
FROM nginx:stable-alpine
COPY --from=build /app/build /usr/share/nginx/html

# Remove default nginx.conf and use a simple config that enables push-state routing
RUN rm /etc/nginx/conf.d/default.conf
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
